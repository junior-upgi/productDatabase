{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Listen for XDebug",
        "type": "php",
        "request": "launch",
        "port": 9000,
        "serverSourceRoot": "/home/vagrant/Code/productDatabase",
        "localSourceRoot": "${workspaceRoot}"
      },
      {
        "name": "Remote",
        "type": "php",
        "request": "launch",
        "port": 9000,
        "serverSourceRoot": "/var/www/html/productDatabase",
        "localSourceRoot": "${workspaceRoot}"
      },
      {
        "name": "Launch",
        "request": "launch",
        "type": "php",
        "program": "${file}",
        "cwd": "${workspaceRoot}",
        "externalConsole": false
      }
    ]
}